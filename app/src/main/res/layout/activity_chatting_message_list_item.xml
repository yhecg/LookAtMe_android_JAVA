<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@color/material_color_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 메시지 타입이 etc 일때, 채팅방 초대, 나가기 등 -->
    <RelativeLayout
        android:id="@+id/layout__messageType_etc"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_etc_contents"
            android:textColor="@color/material_color_black"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout__messageType_else"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout__messageType_else__you"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView_message_you_member_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/textView_message_you_member_name"
                android:layout_toRightOf="@id/circleImageView_message_you_member_image"
                android:textColor="@color/material_color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/layout__messageType_message"
                android:visibility="gone"
                android:layout_toRightOf="@id/circleImageView_message_you_member_image"
                android:layout_below="@id/textView_message_you_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView_message_you_contents"
                    android:background="@drawable/textview_chatting_message_you"
                    android:textColor="@color/material_color_black"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView_message_you_time"
                    android:layout_toRightOf="@id/textView_message_you_contents"
                    android:layout_alignParentBottom="true"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout__messageType_image"
                android:visibility="gone"
                android:layout_toRightOf="@id/circleImageView_message_you_member_image"
                android:layout_below="@id/textView_message_you_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView_image_you_contents"
                    android:scaleType="fitXY"
                    android:layout_marginRight="5dp"
                    android:layout_width="200dp"
                    android:layout_height="250dp"/>
                <TextView
                    android:id="@+id/textView_image_you_time"
                    android:layout_toRightOf="@id/imageView_image_you_contents"
                    android:layout_alignParentBottom="true"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout__messageType_else__me"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layout__me_message_type_message"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView_message_me_contents"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/textview_chatting_message_me"
                    android:textColor="@color/material_color_white"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView_message_me_time"
                    android:layout_toLeftOf="@id/textView_message_me_contents"
                    android:layout_alignParentBottom="true"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout__me_message_type_image"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView_image_me_contents"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:layout_width="200dp"
                    android:layout_height="250dp"/>
                <TextView
                    android:id="@+id/textView_image_me_time"
                    android:layout_toLeftOf="@id/imageView_image_me_contents"
                    android:layout_alignParentBottom="true"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>