<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- shadow (밑으로) : 그림자 -->
            <item android:top="3dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/material_color_gray_50" />
                </shape>
            </item>
            <!-- background (위로) -->
            <item android:bottom="2dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/material_color_white" />
                </shape>
            </item>
            <!-- 테두리 -->
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/material_color_black"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>

